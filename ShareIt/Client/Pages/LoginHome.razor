@page "/loginHome"
@using Microsoft.AspNetCore.Components.Authorization
@using ShareIt.Shared
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject HttpClient httpClient
@inject NavigationManager navigationManager


<h2 class="sub-heading">Willkommen auf der Startseite</h2>
<p>Welche Kategorie interessiert Sie?</p>
<div class="button-container">
    <button type="button" class="category-button" @onclick="() => LoadFoodItemsByCategory(Category.Lebensmittel)">Lebensmittel</button>
    <button type="button" class="category-button" @onclick="() => LoadFoodItemsByCategory(Category.Getränke)">Getränke</button>
    <button type="button" class="category-button" @onclick="() => LoadFoodItemsByCategory(Category.Objekte)">Objekte</button>
</div>

@if (foodItems != null && foodItems.Any())
{
    <div class="food-items-container">
        @foreach (var foodItem in foodItems)
        {
            <div class="food-item-container" @onclick="() => ShowFoodItemDetails(foodItem.Id)">
                <div class="food-item-header">
                    <h4>@foodItem.Name</h4>
                    <p class="food-item-price">Preis: @foodItem.Price</p>
                </div>
                <p class="food-item-description">Beschreibung: @foodItem.Description</p>
                <div class="uploaded-by">
                    <span>Dieser Artikel wurde von </span>
                    <span class="username">@foodItem.UserName</span>
                    <span> hochgeladen</span>
                </div>
                <div class="food-item-image-container">
                    @if (IsValidUrl(foodItem.ImageUrl))
                    {
                        <img class="food-item-image" src="@foodItem.ImageUrl" alt="Bild" />
                    }
                    else
                    {
                        <img class="food-item-image" src="https://i.ibb.co/nLNpg7H/blank-profile-picture-gb0d3bbf79-1280.png" alt="Bild" />
                    }
                </div>
            </div>
        }
    </div>
}
else if (isLoaded)
{
    <p>Es wurden keine Artikel in dieser Kategorie gefunden.</p>
}

<style>
    h2.sub-heading {
        text-align: center;
        color: #333;
        font-size: 24px;
        margin-bottom: 10px;
    }

    p {
        text-align: center;
        color: #555;
        font-size: 16px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .category-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 15px;
        margin-right: 10px;
        font-size: 14px;
        cursor: pointer;
    }

    .category-button:hover {
        background-color: #0056b3;
    }

    .food-items-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 20px;
    }

    .food-item-container {
        border: 1px solid #ccc;
        padding: 10px;
        position: relative;
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

    .food-item-container:hover {
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .food-item-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    h4 {
        color: #333;
        font-size: 18px;
        margin: 0;
    }

    .food-item-price {
        color: #888;
        font-size: 14px;
        margin: 0;
    }

    .food-item-description {
        color: #555;
        font-size: 14px;
        margin: 0;
        text-align: left; /* Align the text to the left */
    }

    .uploaded-by {
        font-size: 12px;
        color: #888;
        margin-top: 5px;
        text-align: left; /* Align the text to the left */
    }

    .username {
        color: blue;
    }

    .food-item-image-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .food-item-image {
        max-width: 100%;
        max-height: 100%;
        display: block;
        margin: 0 auto; /* Center the image horizontally */
    }
</style>

@code {
    private List<FoodItemModelWithId> foodItems;
    private bool isLoaded;

    private async Task LoadFoodItemsByCategory(Category category)
    {
        isLoaded = false;

        try
        {
            // Den angemeldeten Benutzer abrufen
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userName = user.Identity?.Name;

            // Die Lebensmittel-Elemente abrufen, ohne den angemeldeten Benutzer zu berücksichtigen
            foodItems = await httpClient.GetFromJsonAsync<List<FoodItemModelWithId>>($"api/FoodItems/category/{(int)category}?excludeUser={userName}");

            isLoaded = true;
        }
        catch (Exception ex)
        {
            // Fehlerbehandlung, z.B. Fehlermeldung anzeigen
            Console.WriteLine("Fehler beim Laden der Artikel: " + ex.Message);
        }
    }

    private void ShowFoodItemDetails(int foodItemId)
    {
        // Navigieren zur Objektansicht und übergeben des ausgewählten FoodItems als Parameter
        navigationManager.NavigateTo($"/objectView/{foodItemId}");
    }

    private bool IsValidUrl(string url)
    {
        // Überprüfung, ob die URL gültig ist
        // Hier können Sie Ihre eigene Logik für die URL-Validierung implementieren
        // Zum Beispiel können Sie die Url.IsWellFormedUriString-Methode verwenden
        return Uri.IsWellFormedUriString(url, UriKind.Absolute);
    }
}